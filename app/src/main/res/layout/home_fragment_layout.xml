<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expenseDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Expenses"
                android:textColor="@color/text_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expenseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 29, 2021"
                android:textColor="@color/text_grey"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_expense"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:rippleColor="@color/text_orange" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_marginStart="12dp"
            android:textAllCaps="false"
            android:textColor="@color/text_orange"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:strokeColor="@color/text_orange"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesRecyc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"/>


</LinearLayout>